FROM python:3.12-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app

COPY backend/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY backend /app

# entrypoint que roda migrations e depois sobe o servidor
CMD ["bash", "-c", "sleep 8 && alembic upgrade head && uvicorn app.main:app --host 0.0.0.0 --port 8000"]

